@*use the latestblogpost model in the partial view*@
@model UmbracoArt.Models.LatestBlogPost

<div id="fh5co-blog-section" class="fh5co-grey-bg-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h2>@Model.Title</h2>
                @*it is rich text editor so use html.raw*@
                @*<p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. </p>*@
                @Html.Raw(Model.Introduction)
            </div>
        </div>
        <div class="row">
            @{Html.RenderAction("RenderPostList", "Blog", new { numberOfItems = 3 });}
        </div>
    </div>
</div>
